<%- contentFor('body') %> 
<div class="container fluid">
    <div class="card">
        <div class="card-body">
			<h2>Edição de dados</h2>
				<form method="POST" action="/atualizar">
					<div class="form-row">
						<div class="form-group col-md-4 ">
							<label for="nome">Nome:</label> 
							<input value="<%=clientes.nome%>" type="text" name="nome" pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" required placeholder="Nome"  class="form-control"> 
							<small id="passwordHelpBlock" class="form-text text-muted">
								Apenas letras.
							</small>
						</div>

						<div class="form-group col-md-4">
							<label for="inputEstado">Sexo</label>
							<input value="<%=clientes.sexo%>" type="text" name="sexo" pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" required placeholder="sexo"  class="form-control"> 
							<small id="passwordHelpBlock" class="form-text text-muted">
								Masculino ou feminino.
							</small>
						  </div>
                          
                          <div class="form-group col-md-4">
							<label for="cpf">CPF:</label> 
							<input readonly value="<%=clientes.cpf%>"  onkeypress="return event.charCode >= 48 && event.charCode <= 57" minlength="11"  maxlength="11" name="cpf" required placeholder="CPF" class="form-control"> 
							<small id="passwordHelpBlock" class="form-text text-muted">
								Somente leitura,não é possivel editar.
							</small>
						</div>
					</div>
					<div class="form-row">
						

						<div class="form-group col-md-2">
							<label for="idade">Idade:</label> 
							<input value="<%=clientes.idade%>" type="number" min="0" max="200" name="idade" required placeholder="Idade" class="form-control">
							<small id="passwordHelpBlock" class="form-text text-muted">
								Idade mínima 0, idade máxima 200.
							</small>
						</div>

                        <div class="form-group col-md-6">
                            <label for="inputAddress">Endereço</label>
                            <input required value="<%=clientes.endereço%>" type="text" class="form-control" name="endereco" placeholder="Rua ou Avenida,número,bairro">
                        </div>
					</div>

					
					
					<div class="form-row">
						<div class="form-group col-md-4">
							<label for="telefone">Telefone:</label> 
							<input value="<%=clientes.telefone%>" onkeypress="return event.charCode >= 48 && event.charCode <= 57" minlength="12"  maxlength="12" name="telefone" required placeholder="(DDD)XXXXX-XXXX" class="form-control"> 
							<small id="passwordHelpBlock" class="form-text text-muted">
								Siga o modelo, apenas números
							</small>
						</div>

						<div class="form-group col-md-4 ">
							<label for="inputEmail4">Email</label>
							<input value="<%=clientes.email%>" type="email" required class="form-control" name="email" placeholder="Email">
						  </div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-4">
							<label for="Responsável">Nome do Responsável:</label> 
							<input value="<%=clientes.responsavel%>" type = 'text'  pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" name="responsavel"  placeholder="Nome do responsável" class="form-control"> 
							<small id="passwordHelpBlock" class="form-text text-muted">
								Para menores de idade, é obrigatorio ter o nome  e o telefone do responsável
							</small>
						</div>

						<div class="form-group col-md-4">
							<label for="medico">Médico Responsável</label>
							<input value="<%=clientes.medico%>" type="text"  pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" class="form-control" name="medico" placeholder="Médico">
                            <small id="passwordHelpBlock" class="form-text text-muted">
								Opcional.
							</small>
                        </div>
                    
                        <div class="form-group col-md-4">
                            <label for="telefone">Telefone do responsável:</label> 
                            <input value="<%=clientes.telefoneResponsavel%>" onkeypress="return event.charCode >= 48 && event.charCode <= 57" minlength="12"  maxlength="12" name="resTelefone" placeholder="(DDD)XXXXX-XXXX" class="form-control"> 
                            <small id="passwordHelpBlock" class="form-text text-muted">
                                Siga o modelo, apenas números
                            </small>
                        </div>
                    </div>


					<div class="form-group col-md-6 ">
						<label for="sintomas">Sintomas:</label> 
						<textarea  class="form-control"   name="sintomas" rows="3" placeholder="Opcional"><%=clientes.descricao%></textarea>
					</div>

					<button class="btn btn-primary"  type="submit">Salvar alterações</button>
					<a class="btn btn-primary" href="/gerenciar/0" type="submit">Voltar</a>
				</form>
			</div>
		</div>
</div>