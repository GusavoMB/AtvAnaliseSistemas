		<%- contentFor('body') %>
		<div id = "main_container" class="container col-lg-5 col-sm-10 col-md-6">
		<div class="card " id = 'carde'>
			<div class="card-body">
			<h2>Informe os dados do Paciente</h2>
				<form method="POST" action="/sucess">
					<div class="form-group">
						<label for="nome">Nome:</label> 
						<input type="text" name="nome" required placeholder="Nome" class="form-control"> 
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="cpf">CPF:</label> 
							<input type="number" name="cpf" required placeholder="CPF" class="form-control"> 
						</div>

						<div class="form-group col-md-6">
							<label for="idade">Idade:</label> 
							<input type="number" name="idade" required placeholder="Idade" class="form-control">
						</div>

					</div>

					<div class="form-group col-md-6">
						<label for="telefone">Telefone:</label> 
						<input type="number" name="telefone" required placeholder="Telefone" class="form-control"> 
					</div>

					<div class="form-group">
						<label for="sintomas">Sintomas:</label> 
						<textarea class="form-control" required name="sintomas" rows="3" placeholder="Opcional"></textarea>
					</div>

					<button class="btn btn-primary"  type="submit">Cadatrar</button>
				</form>
			</div>
		</div>
		</div>
